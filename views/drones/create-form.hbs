<h2>Create a new drone</h2>

<form action="/drones/create" method="post">

  <label for="name">Name:</label>

  <input
    type="text"
    name="name"
    id="name-id"
    value=""
    placeholder="Name of drone"
  />
  <label for="propeller">Propeller:</label>

  <input
    type="number"
    name="propeller"
    id="propeller-id"
    value=""
    placeholder="propeller amount"
  />
  <label for="speed">Speed:</label>

  <input
    type="number"
    name="speed"
    id="speed-id"
    value=""
    placeholder="Speed of Drone"
  />
  <button type="submit">Submit</button>
</form>